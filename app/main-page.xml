<?xml version="1.0" encoding="utf-8" ?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="RTMP Virtual Camera" />
    <StackLayout>
        <TextField hint="Enter RTMP URL" text="{{ rtmpUrl }}" />
        <Button text="Start Virtual Camera" tap="{{ startVirtualCamera }}" />
        <Label text="{{ status }}" textWrap="true" />
    </StackLayout>
</Page>